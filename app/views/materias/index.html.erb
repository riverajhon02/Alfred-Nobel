<h1>Todas las materias</h1>

<%= link_to new_materia_path(@materia), class: "btn btn-info btn-sm mb-3" do %>
  Nueva Materia
  <%= fa_icon "plus" %>
<% end %>

<div class="row">
    <div class="col-md-12">
        <div class="card shadow-lg">
            <div class="card-body">
                <div class="box">
                    <div class="table-responsive">
                        <table class="table">
                            <tr class="thead-dark">
                                <% if @materias.empty?%>
                                    <th>Codigo</th>
                                    <th>Nombre</th>
                                <% elsif %>
                                    <th>Codigo</th>
                                    <th>Nombre</th>
                                    <th colspan="3">Acciones</th>
                                <% end %>    
                            </tr>
                            <%= render @materias %>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

