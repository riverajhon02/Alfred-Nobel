




<div class="container">
    <div class="row mt-2">
        <div class="col-md-6 mx-auto">
            <div class="card shadow-lg">
                <div class="card-body">
                    <div class="box">
                        <h2>Crear noticia</h2>
                        <%= simple_form_for @noticia do |c| %>
                        <%= c.input :fecha %>
                        <%= c.input :titulo %>

                        <%= c.hidden_field :informacion, id: "minfo" %>
                        <trix-editor input="minfo"></trix-editor>
                        <%= c.button :submit, class: "btn btn-primary mt-1" %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>