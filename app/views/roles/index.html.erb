<div class="row">
    <div class="col-md-12">
        <div class="card shadow-lg mt-4">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table">
                        <tr>
                            <thead class="thead-dark">
                                <th>Nombre</th>

                                <th colspan="3" >Acciones</th>

                            </thead>
                        </tr>
                        <% @roles.each do |role|  %>

                        <tr>

                            <td class="text-uppercase"> <%= role.name %></td>

                            <td>
                                <%= link_to role_path(role), class:"btn btn-success btn-sm" do %>
                                <%= fa_icon "eye" %>
                                Mostrar
                                <% end %>



                                <%= link_to edit_role_path(role), class: "btn btn-warning btn-sm" do %>
                                <i class="fas fa-pencil-alt"></i>
                                Editar
                                <% end %>



                                <%= link_to role_path(role),method: :delete,class: "btn btn-danger btn-sm", data: {confirm:"Â¿Desae eliminar este rol?"} do %>
                                <%= fa_icon "trash" %>
                                Eliminar
                                <% end %>
                            </td>
                        </tr>
                        <% end %>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>